{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "firefox",
            "request": "launch",
            "name": "Firefox Debug",
            "reAttach": true,
            "reloadOnAttach": true,
            "clearConsoleOnReload": true,
            "reloadOnChange": {
                "watch": ["${file}"],
            },
            "file": "${file}",
        },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Debug",
            "file": "${file}"
        }
    ]
}